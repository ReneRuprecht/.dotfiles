{
  "window.customTitleBarVisibility": "auto",
  "workbench.activityBar.location": "default",
  "workbench.sideBar.location": "right",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "breadcrumbs.enabled": false,
  "extensions.ignoreRecommendations": true,
  "update.showReleaseNotes": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.fontFamily": "MesloLGS NF",
  "editor.lineNumbers": "relative",
  "editor.detectIndentation": true,
  "editor.formatOnPaste": false,
  "editor.inlineSuggest.enabled": true,
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "files.autoSave": "onWindowChange",
  "explorer.openEditors.visible": 1,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.showTabs": "none",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.startupEditor": "none",
  "window.menuBarVisibility": "toggle",
  "zenMode.showTabs": "none",
  "zenMode.hideLineNumbers": false,
  "zenMode.fullScreen": true,
  "zenMode.centerLayout": true,
  "zenMode.hideStatusBar": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh"
    },
    "fish": {
      "path": "fish"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "args": ["-l"],
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "args": ["-l"]
    },
    "fish": {
      "path": "fish",
      "args": ["-l"]
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "vim.leader": " ",
  "vim.hlsearch": true,
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-u>": true,
    "<C-s>": false,
    "<C-z>": false,
    "<C-k>": false
  },
  "vim.history": 500,
  "vim.normalModeKeyBindingsNonRecursive": [
    // EXTRA
    {
      "before": ["<C-d>"],
      "after": ["2", "0", "j", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["2", "0", "k", "z", "z"]
    }
  ],
  "vsicons.dontShowNewVersionMessage": true,
  "telemetry.telemetryLevel": "off",
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "vs-kubernetes": {
    "vscode-kubernetes.minikube-path-linux": "/home/rene/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube",
    "vscode-kubernetes.helm-path-linux": "/home/rene/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm",
    "vs-kubernetes.minikube-show-information-expiration": "2025-06-06T21:16:12.407Z"
  },
  "git.openRepositoryInParentFolders": "never",
  "ansible.lightspeed.enabled": false,
  "ansible.lightspeed.suggestions.enabled": false,
  "files.associations": {
    "*.yml": "ansible"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultColorDecorators": "never",
    "editor.quickSuggestions": {
      "strings": true,
      "other": true,
      "comments": false
    }
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "pylint.enabled": false,
  "black-formatter.args": [
    "--line-length",
    "79"
  ],
  "flake8.enabled": true,
  "isort.args": [
    "--profile",
    "'black'"
  ],
  "docker.extension.enableComposeLanguageServer": false,
  "makefile.configureOnOpen": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}
